Algoritmo ciclomaximo
	Escribir "Ingresa porfavor el valor máximo del ciclo:"//mostrar mensaje en pantalla
    Leer Max_ciclo//leer variables
    contador <- 1
	
    Mientras contador <= Max_ciclo
        Si contador % 2 = 0 Entonces
            Escribir contador
        FinSi
        contador <- contador + 1
    FinMientras

FinAlgoritmo
